<% include ../partials/header %>

<div class="container">
    <h1 style="text-align: center">Edit Comment</h1>
    <div class="container d-flex bd-highlight">
        <div class="p-5 flex-fill bd-highlight">
            <form
                action="/items/<%= item_id %>/comments/<%=comment._id%>?_method=PUT"
                method="POST"
            >
                <div class="form-group">
                    <input
                        class="form-control"
                        type="text"
                        value="<%=comment.text%>"
                        name="comment[text]"
                    />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/items/<%= item_id %>">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
