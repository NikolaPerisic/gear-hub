<% include ../partials/header %>

<div class="container mt-5">
    <h1 style="text-align: center">Edit <%= item.name %> Post</h1>
    <div class="container d-flex bd-highlight">
        <div class="p-5 flex-fill bd-highlight">
            <form action="/items/<%= item._id %>/?_method=PUT" method="POST">
                <div class="form-group">
                    <input
                        class="form-control"
                        type="text"
                        value=" <%= item.name %>"
                        name="name"
                        required
                    />
                </div>
                <div class="form-group">
                    <input
                        class="form-control"
                        type="text"
                        value=" <%= item.image %>"
                        name="image"
                        required
                    />
                </div>
                <div class="form-group">
                    <input
                        class="form-control"
                        type="text"
                        value=" <%= item.review %>"
                        name="review"
                        required
                    />
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/items">Go Back</a>
        </div>
    </div>
</div>

<% include ../partials/footer %>
